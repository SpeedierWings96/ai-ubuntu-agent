# AI Ubuntu Agent Configuration
# Copy this file to .env and update with your values

# ============================================
# REQUIRED CONFIGURATION
# ============================================

# OpenRouter API Key (get from https://openrouter.ai/keys)
OPENROUTER_API_KEY=sk-or-v1-xxxxxxxxxxxxx

# VNC Password for desktop access
DESKTOP_VNC_PASSWORD=changeme

# ============================================
# MODEL CONFIGURATION
# ============================================

# Primary model to use
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet

# Maximum tokens for responses
OPENROUTER_MAX_TOKENS=4096

# Temperature for LLM responses (0-1, higher = more creative)
OPENROUTER_TEMPERATURE=0.7

# Fallback models (comma-separated, ordered by preference)
OPENROUTER_FALLBACK_MODELS=openai/gpt-4o,anthropic/claude-3-haiku

# ============================================
# PORT CONFIGURATION
# ============================================

# Desktop VNC web interface port
DESKTOP_HTTP_PORT=6080

# Agent API server port
AGENT_PORT=9991

# Web UI port
WEB_PORT=9992

# Prometheus metrics port
METRICS_PORT=9090

# ============================================
# SECURITY CONFIGURATION
# ============================================

# Enable authentication for web UI
ENABLE_AUTH=false

# Auth credentials (only used if ENABLE_AUTH=true)
AUTH_USERNAME=admin
AUTH_PASSWORD=admin

# JWT secret for session management
JWT_SECRET=change-in-production-please-use-long-random-string

# Rate limiting
RATE_LIMIT_REQUESTS_PER_MIN=60

# ============================================
# RESOURCE LIMITS
# ============================================

# Maximum file size for uploads/downloads (MB)
MAX_FILE_SIZE_MB=10

# Maximum execution time for shell commands (seconds)
MAX_EXEC_TIME_SEC=30

# Maximum concurrent tasks
MAX_CONCURRENT_TASKS=3

# ============================================
# LOGGING & MONITORING
# ============================================

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Log format (json, pretty)
LOG_FORMAT=json

# Enable Prometheus metrics endpoint
ENABLE_METRICS=true

# ============================================
# DESKTOP CONFIGURATION
# ============================================

# Desktop resolution
DESKTOP_RESOLUTION=1920x1080

# Color depth (16, 24, 32)
DESKTOP_COLOR_DEPTH=24

# VNC quality (1-9, higher = better quality, more bandwidth)
VNC_QUALITY=7

# Enable GPU passthrough (requires nvidia-docker)
ENABLE_GPU_PASSTHROUGH=false

# ============================================
# ADVANCED CONFIGURATION
# ============================================

# Node environment
NODE_ENV=production

# Database path (for persistent storage)
DATABASE_PATH=/data/agent.db

# Cache directory
CACHE_DIR=/data/cache

# Temporary files directory
TEMP_DIR=/tmp

# Enable debug mode
DEBUG=false

# Webhook URL for notifications (optional)
WEBHOOK_URL=

# Custom CA certificate path (for enterprise environments)
NODE_EXTRA_CA_CERTS=
